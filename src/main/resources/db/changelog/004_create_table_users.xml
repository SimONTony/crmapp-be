<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="001-create-table-users" author="a.saifullin" objectQuotingStrategy="QUOTE_ALL_OBJECTS">
        <createTable tableName="USERS">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="firstname" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="lastname" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="patronymic" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="idx_user_email"/>
            </column>

            <column name="personal_code" type="VARCHAR(20)"/>

            <column name="role" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(20)" defaultValue="ACTIVE"/>

            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="require_password_change" type="BOOLEAN" defaultValueBoolean="true"/>

            <column name="mfa_enabled" type="BOOLEAN" defaultValueBoolean="false"/>

            <column name="mfa_secret" type="VARCHAR(255)"/>

            <column name="phone" type="VARCHAR(20)"/>

            <column name="last_login" type="TIMESTAMP"/>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>

            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>